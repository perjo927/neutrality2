template(name="experiences_creator")
    #experiences-creator.modal.bottom-sheet
        .modal-content
            h4 Add testimonial
            .row
                form#experiences-create-form.col.s12
                    .row
                        .input-field.col.s12
                            input#experiences-create-title.validate(value='Title', type='text' pattern=".{3,100}"
                            maxlength="100" required title="(3 to 100 characters)" name="title")
                            label.active(for='experiences-create-title') Title
                        .input-field.col.s12
                            input#experiences-create-name.validate(value='Name', type='text' pattern=".{3,50}"
                            maxlength="50" required title="(3 to 50 characters)" name="name")
                            label.active(for='experiences-create-name') Name
                        .input-field.col.s12
                            textarea#experiences-create-text.materialize-textarea.validate(value="Text"
                            name='text' minlength="10" maxlength="200"
                            required title="(10 to 200 characters)")
                            label(for='experiences-create-text') Text
                        .col.s12.m12.center
                            br
                            a.modal-action.modal-close.waves-effect.waves-green.btn-flat.left(href="#") Cancel
                            button.modal-action.modal-close.waves-effect.waves-green.btn.right(
                            type='submit', name='action') Submit
        .modal-footer
            //hr