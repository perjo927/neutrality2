//
template(name="hero_modal")
   #hero_modal.modal.modal-fixed-footer
      .modal-content.center
         +hero_modal_title_container
         #signup_form
            +hero_modal_subtitle_container
            +hero_modal_text_container
            +hero_signup
         #confirmation.hide
            .row
               br
               i.large.green-text(class="#{modal.icon}")
               +hero_modal_confirmation_title_container
               +hero_modal_confirmation_subtitle_container
               +hero_modal_confirmation_text_container

      .modal-footer
         a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='#!') Close

//
template(name="hero_modal_title_container")
   if Session 'editingHeroModalTitle'
      if currentUser
         .black-text
            +InputHelper(attribute='modal.title' document=this collection="hero"
            class='form-control' placeholder=modal.title id=this)
      else
         +hero_modal_title
   else
      +hero_modal_title

//
template(name="hero_modal_title")
   h4.black-text(name="title" class="{{#if currentUser}}edit{{/if}}")= modal.title

