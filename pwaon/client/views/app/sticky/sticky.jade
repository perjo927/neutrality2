template(name="sticky")
    #fb-root
    .row.sticky-row
        .sticky-social
            .offset-s1
                each sticky
                    .col.s1
                        // Modal Trigger
                        a.modal-trigger(href='#link_modal' class="#{color}-text")
                            i.sticky-icon(class="icon-#{icon}" data-link="#{link}")
        +linked_content

//
template(name="linked_content")
    with externalLink
        // Material Modal Structure
        #link_modal.modal.modal-fixed-footer
            .modal-content.center
                h4 #{title}
                +UI.dynamic template=title data=this
            .modal-footer
                a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='#!') Close

