template(name='_videos')
    +video_list
    +sticky
    +appointment

template(name="video_list")
    .container
        with contentareas.videos
            .row.center
                +videos_icon_container
                +videos_main_title_container
                +videos_action_button

        +videos_menu

        .row
            ul.scrollfire.videos
                each videos
                    each items
                        li
                            +video_frame
    //+videos_creator

//
template(name="videos_icon_container")
    +videos_icon

//
template(name="videos_icon")
    // TODO: Make editable
    i.purple-text.medium(class="#{icon}")

//
template(name="videos_main_title_container")
    +videos_main_title

//
template(name="videos_main_title")
    // TODO: Make title editable
    h2.videos-title= title
    //if currentUser
        +videos_history

//
template(name="videos_history")
    .pink-text
        if Session 'videosHistory'
            h6.center.videos-current
                i &#8594; View Current Videos
        else
            h6.center.videos-history
                i &#8594; View Archived Videos

//
template(name="videos_action_button")
    if currentUser
        //a.btn-floating.btn-large.btn-edit.waves-light.green.right.modal-trigger(href='#videos-creator')
        a.btn-floating.btn-large.btn-edit.waves-light.green.right(href='youtube')
            i.mdi-content-add Add
//
template(name="videos_remove_button")
    if currentUser
        i.remove-item.mdi-action-highlight-remove.left
//
template(name="videos_archive_button")
    if currentUser
        if archived
            i.tiny.archive-item.right.material-icons.red-text restore
        else
            i.tiny.archive-item.right.material-icons.green-text schedule


//
template(name="videos_menu")
    .row
        form.col.s12
            .row
                +videos_search
                +videos_categories

//
template(name="videos_search")
    form
        .input-field.col.s12.m6.l4
            i.videos-search.medium.material-icons.prefix search
            input#videos-search.validate(type="text")
            label(for="videos-search") Search

// TODO: Bind to real categories from channels
template(name="videos_categories")
    .input-field.col.s12.m6.l8
        select.browser-default
            option(value="" disabled="," selected="") Choose category
            option(value="all") All videos
            option(value="Fears & Phobias") Fears & Phobias
            option(value="Natural Pain Relief") Natural Pain Relief
            option(value="Natural Weight Loss") Natural Weight Loss

//
template(name="video_frame")
    .col.s12.m6.l4
        .card.black.lighten-2
            .card-content.white-text
                //span.card-title
                    h6= snippet.title

                iframe(width='100%',
                        height='100%',
                        src='https://www.youtube.com/embed/#{id.videoId}',
                        frameborder='0',
                        allowfullscreen='')

                // TODO: Lazy load with image first
                //img.responsive-img(src="#{snippet.thumbnails.default.url}")

            .card-action
                a(href="https://www.youtube.com/embed/#{this.id.videoId}") View Fullscreen
