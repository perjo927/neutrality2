template(name="hero_events")
   #hero_events.modal
      .modal-content.center
         a.hero-events-close.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='#!') &times; Close
         h4.black-text Upcoming Events
         hr
         each eventsLimited
            +hero_event
